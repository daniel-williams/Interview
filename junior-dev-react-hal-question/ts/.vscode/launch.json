{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Jest current file",
      "type": "node",
      "request": "launch",
      "runtimeArgs": [
        // "--inspect-brk",
        "--inspect",
        "${workspaceFolder}\\node_modules\\jest\\bin\\jest.js",
      ],
      "args": [
        "--runInBand",
        "${fileBasename}",
      ],
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "port": 9229,
      "skipFiles": [
        "<node_internals>/**",
        "<eval>/**",
        "**/primordials.js",
        "**\\<eval>\\**",
        "**\\<node_internals>\\**",
        "**/<node_internals>/**",
        "**/node_modules/**",
      ]
    },
  ]
}